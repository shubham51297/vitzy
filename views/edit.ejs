<%- include ('partials/header') %>
<div class="container">
<h1> Edit movie </h1>


<form action="/videos/new/edit/<%= video._id %>" method="POST">

<div class="form-group">
	<input type="text" name="title" class="form-control" value="<%= video.title %>">
</div>
 <div class="form-group">
	<input type="text" name="genre" class="form-control" value="<%= video.genre %>">
</div>
<div class="form-group">
	<input type="text" name="image" class="form-control" value="<%= video.image %>">
</div>
 <div class="form-group">
	<textarea name="desc" class="form-control" placeholder="<%= video.description %>"><%= video.description %></textarea>
</div>
<div class="form-group">
	<button type="submit" class="btn btn-info" >Save</button>
</div>


</form>

<a href="/">Cancel</a>

</div>

<%- include ('partials/footer') %>