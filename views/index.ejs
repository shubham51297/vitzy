
<%- include ('partials/header') %>


<div class="jumbotron">
  <h1 class="display-4">Vidzy Application</h1>
  <p class="lead">This is the list of most popular videos</p>
  <div id="searchForm">
    <form action="/videos/search" method="POST">
      <div class="form-group">
        <h4> <label for="genre">Choose a genre:</label>
        <select name="genre" id="genre">
          <option value="" selected>All genre</option>
          <option value="SciFi">SciFi</option>
          <option value="Awesome">Awesome</option>
          <option value="Fantasy">Fantasy</option>
          <option value="Drama">Drama</option>
          <option value="Comedy">Comedy</option>
        </select></h4>
      </div>
      
      <div class="form-group">
        <h4><label for="genre">Looking for : </label>
        <input id ="search" type="text" name="title" class="form-control" placeholder="Search title">
        <button type="submit" class="btn btn-info" >SEARCH</button></h4>
      </div>
      </form>
  </div>
  <a class="btn btn-primary btn-lg" href="/videos/new" role="button">
  Add new video</a>
  
  
</div>



<div class="container">


<div class="row">
<% results.forEach(function(video){ %>
  
	<div class="sm-col-3">
		<img src="images/<%= video.image %>" style="width:200px; height:200px;" class="img-thumbnail"/>
		<div class="caption"><a href="videos/<%= video._id %>"><%= video.title %></a></div>
	</div>


<% }); %>

</div>
</div>
<script>
  var temp = "";
  var mySelect = document.getElementById('mySelect');

  for(var i, j = 0; i = mySelect.options[j]; j++) {
    if(i.value == temp) {
        mySelect.selectedIndex = j;
        break;
    }
}
</script>
